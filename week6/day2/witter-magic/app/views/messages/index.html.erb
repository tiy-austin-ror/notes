<p id="notice"><%= notice %></p>

<h1>Listing Messages</h1>

<table class='table table-hover table-striped'>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @messages.each do |message| %>
      <tr>
        <td><%= message.title %></td>
        <td><%= message.body %></td>
        <td><%= message.user.username %></td>
        <td><%= link_to 'Show', message, class: 'btn btn-default' %></td>
        <td><%= link_to 'Edit', edit_message_path(message), class: 'btn btn-default' %></td>
        <td><%= link_to 'Destroy', message, class: 'btn btn-danger', method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

