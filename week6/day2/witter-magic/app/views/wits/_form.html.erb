<% if @wit.errors.any? %>
  <% @wit.errors.messages.each do |att, err_msg| %>
    <p class='error'><strong><%= att %>:</strong> <%= err_msg.join %></p>
  <% end %>
<% end %>

<%= form_for([@user, @wit]) do |f| %>
  <p>
    <%= f.label :message %>
    <%= f.text_field :message %>
  </p>
  <p>
    <%= f.label :published %>
    <%= f.check_box :published %>
  </p>
  <%= f.submit, class: 'btn btn-primary' %>
<% end %>
