<!DOCTYPE html>
<html>
<head>
  <title>Bloggr</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<nav class='navbar navbar-default'>
  <ul class="nav navbar-nav navbar">
    <% if signed_in? %>
      <li> <%= link_to "Write a New Post", new_post_path, class: "btn btn-default" %> </li>
      <li> <%= link_to "Sign Out", sign_out_path, method: :DELETE, class: "btn btn-danger" %> </li>
    <% else %>
      <li> <%= link_to "Sign In", sign_in_path, class: "btn btn-primary" %> </li>
      <li> <%= link_to "Sign Up", new_user_path, class: "btn btn-default" %> </li>
    <% end %>
  </ul>
</nav>
<% if current_user %> Hello <%= current_user.name %> <% end %>

<div class='container'>
  <% unless flash.empty? %>
    <div id='flash-msg' class='flash'>
      <%= flash[:notice] %>
      <%= flash[:alert] %>
    </div>
  <% end %>

  <%= yield %>

</div>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/marked/0.3.5/marked.min.js"></script>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
</body>
</html>
