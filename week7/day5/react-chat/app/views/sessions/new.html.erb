<h1>Login!</h1>

<div class='m4'>
  <%= form_tag login_path do %>
    <div class='form-group'>
      <p> Username: <%= text_field_tag :username, '', class: 'form-control' %></p>
    </div>
    <div class='form-group'>
      <p> Password: <%= password_field_tag :password, '', class: 'form-control' %></p>
    </div>
    <div class='form-group'>
      <p> <%= submit_tag "Submit", class: 'btn btn-primary' %> </p>
    </div>
  <% end %>
</div>
