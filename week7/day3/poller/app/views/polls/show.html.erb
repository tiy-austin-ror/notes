<div id="polls" class="row">
  <div class="col s12 m12 l12">
    <div class="card">
      <div class="card-content black-text">
        <span class="card-title"><%= @poll.name %></span>
        <p>
          <%= @poll.description %>
          <small><%= @poll.questions.count %> Questions</small>
        </p>
      </div>
      <div class="">
        <ol class="collection">
          <% @poll.questions.each do |q| %>
            <li class="collection-item"><%= q.body %><br/>
              <% current_answer = q.recent_answer_for(current_user) %>
              <% 1.upto(5).each do |n| %>
                <%= link_to n,
                    answers_path(answer: {
                      question_id: q.id,
                      rating: n,
                      user_id: current_user }),
                    method: :POST,
                    class: "send-answer btn #{'red' if current_answer && current_answer.rating == n}",
                    remote: true %>
              <% end %>
            </li>
          <% end %>
        </ol>
      </div>
    </div>
  </div>
</div>


