<p id="notice"><%= notice %></p>

<h1>Listing Posts</h1>

<%= react_component("NewPost") %>


<%= react_component('Posts', posts: @posts) %>

<% @posts.each do |post| %>
  <% react_component('Post', imageUrl: post.image_url, body: post.body) %>
<% end %>




<table class='table table-border table-hover'>
  <thead>
    <tr>
      <th>Image url</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= image_tag(post.image_url, width: 200) %></td>
        <td><%= post.body %></td>
        <td><%= link_to 'Show', post %></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br />

<%= link_to 'New Post', new_post_path %>
